<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dqhl.recycledemo.activity.HorizontalRecycleActivity">
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recyceView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/home_kckp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/ic_homepage"
                android:gravity="center"
                android:text="事故快处快赔"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_wdsl_shigu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/ic_goback"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="8sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_road"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/ic_homepage"
            android:gravity="center"
            android:text="路况信息"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/home_illegal_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/ic_homepage"
            android:gravity="center"
            android:text="信息征集"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_homepage"
            android:gravity="center"
            android:text="更多服务"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>
